@model HomeDetailsViewModel

@{
    ViewBag.Title = "Book Details";
    var photoPath = "~/images/" + (Model.Book.PhotoPath ?? "NoImage.bmp");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Book.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>Book ID : @Model.Book.Id</h4>
                <h4>Name : @Model.Book.Name</h4>
                <h4>Author : @Model.Book.Author</h4>
                <h4>Genre : @Model.Book.Genre</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary m-1">Back</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@Model.Book.Id"
                   class="btn btn-primary m-1">Edit</a>
                <form asp-controller="home" asp-action="Delete" asp-route-id="@Model.Book.Id">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}
